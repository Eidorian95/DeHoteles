<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/fragmentDescription"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".DescriptionFragment">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <TextView
                    android:id="@+id/tvDescDet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Este el es Fragment para la descripcion" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintVertical_bias="0.075" android:textSize="18sp" android:layout_margin="8dp"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>