<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp" android:layout_margin="8dp" android:background="?android:attr/colorButtonNormal">


    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@mipmap/ic_launcher"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:id="@+id/ivMainPic"
            android:layout_height="200dp"
            android:elevation="5dp"/>
    <TextView
            android:text="Buenos Aires INN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivMainPic"
            android:id="@+id/tvTituloTemp" android:textSize="24sp" android:layout_marginTop="8dp"
            android:textColor="@color/colorAccent"/>
    <TextView
            android:text="8,3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRating" android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/holo_blue_dark" app:layout_constraintStart_toEndOf="@+id/rbStars"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloTemp"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="1.0" android:padding="8dp"
            android:textColor="@color/colorAccent"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rbStars"
            style="@style/Widget.AppCompat.RatingBar.Indicator"
            android:numStars="5"
            android:rating="3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTituloTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_margin="8dp"
            app:layout_constrainedHeight="false"
            app:layout_constrainedWidth="false"
            android:isIndicator="false"/>
</android.support.constraint.ConstraintLayout>